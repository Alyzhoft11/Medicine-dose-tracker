datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Medications {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  medication String
  dosage     String
  frequency  String
  User       User?    @relation(fields: [userId], references: [id])
  userId     Int?
}

model User {
  id    Int           @id @default(autoincrement())
  email String        @unique
  name  String?
  meds  Medications[]
}
